@using System.Web.UI.WebControls
@using DrawNet.Draw.Models
@model LoginViewModel
@{
    ViewBag.Title = "Sign In";
}

<div class="row" style="padding: 10px 15px 0 15px;">
    <section id="loginForm">
        <p>If you have an account with us, please sign in.</p>

        @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new { role = "form"}))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group icon-addon addon-md top-buffer-15">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control placeholder-dark-gray", @placeholder = "User Name Or Email"})
                <label for="email" class="glyphicon glyphicon-user text-info" rel="tooltip" title="Username"></label>
                @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
            </div>
            <div class="form-group icon-addon addon-md top-buffer-15">
                @Html.PasswordFor(m => m.Password, new {@class = "form-control placeholder-dark-gray", @placeholder = "User Password"})
                <label for="password" class="glyphicon glyphicon-lock text-info" rel="tooltip" title="Password"></label>
                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
            </div>
            <div class="form-group top-buffer-15">
                <button type="submit" class="btn btn-lg btn-success btn-block">Log In</button>
            </div>
            @Html.ValidationSummary( true, "", new { @class = "text-danger text-bold validation-alert" } )
            <div class="checkbox pull-left vertical-buffer-0">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <div class="pull-right" style="color: #578393">
                @Html.ActionLink("Forgot Password?", "ForgotPassword")
            </div>
        }
    </section>


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
















